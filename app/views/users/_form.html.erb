<%= form_for(@user, :html => {:class => "form-horizontal", :multipart => true}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well">
  <div class="field control-group">
    <%= f.label :mail_address, "Mail Address", :class => "control-label" %>
    <div class="field controls">
    <%= f.text_field :mail_address, :placeholder => "mail address", :class => "input-xlarge" %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :password, "New Password", :class => "control-label" %>
    <div class="field controls">
    <%= f.password_field :password, :placeholder => "new password", :class => "input-xlarge"  %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :password_confirmation, "Retype New Password", :class => "control-label" %>
    <div class="field controls">
    <%= f.password_field :password_confirmation,  :placeholder => "retype new password", :class => "input-xlarge"  %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
  </div>
<% end %>
